// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(auto()) @map("_id") @db.ObjectId
  userId            String  @db.ObjectId
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id])

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  sessionToken String   @unique
  userId       String   @db.ObjectId
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id])

  @@map("sessions")
}

model User {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String?
  role          String    @default("user") // "user" | "admin"
  accounts      Account[]
  sessions      Session[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@map("users")
}

model VerificationToken {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model Product {
  id          String      @id @default(auto()) @map("_id") @db.ObjectId
  name        String      @unique
  description String?
  price       Float
  stock       Int         @default(0)
  image       String?
  category    String?
  type        String      @default("other") // "key" | "id" | "script" | "other"
  expireDays  String?     // "1D", "7D", "30D", "Never" (for type: "key")
  sourceCode  String?     // Source code / script content (for type: "key" or "script")
  isActive    Boolean     @default(true)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  @@map("products")
}

model Order {
  id            String      @id @default(auto()) @map("_id") @db.ObjectId
  userId        String      // Keep for reference but also store user data
  userData      Json        // Store full user data: { id, name, email, image, role }
  status        String      @default("pending") // "pending" | "paid" | "completed" | "cancelled"
  totalAmount   Float
  paymentMethod String? // "promptpay"
  omiseChargeId String?     @unique
  omiseSourceId String?
  qrCodeUrl     String?
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  @@map("orders")
}

model OrderItem {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  orderId   String   // Keep for reference
  productId String   // Keep for reference but also store product data
  productData Json   // Store full product data: { id, name, description, price, type, expireDays, etc. }
  quantity  Int
  price     Float
  code      String? // The actual code/key that will be delivered (for type: "key")
  username  String? // Username for type: "id"
  password  String? // Password for type: "id"
  createdAt DateTime @default(now())

  @@map("order_items")
}

model Key {
  id           String    @id @default(auto()) @map("_id") @db.ObjectId
  key          String    @unique // The actual key code
  orderId      String    // Keep for reference
  orderData    Json?     // Store order data snapshot: { id, status, totalAmount, etc. }
  orderItemId  String    // Keep for reference
  orderItemData Json?    // Store order item data snapshot
  productId    String    // Keep for reference
  productData  Json      // Store full product data: { id, name, type, expireDays, etc. }
  userId       String    // Keep for reference
  userData     Json      // Store full user data: { id, name, email, etc. }
  purchaseDate DateTime  @default(now())
  expireDate   DateTime
  buyerName    String?
  activateDate DateTime? // First activation date
  hwid         String?  // Hardware ID
  placeId      String?  // Place ID
  isActive     Boolean   @default(true)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  @@map("keys")
}

model KeyLog {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  keyId       String   // Keep for reference
  keyData     Json?    // Store key data snapshot: { key, expireDate, productData, etc. }
  action      String   // "verify", "activate", etc.
  hwid        String?
  placeId     String?
  success     Boolean  @default(true)
  message     String?
  ipAddress   String?
  userAgent   String?
  createdAt   DateTime @default(now())

  @@map("key_logs")
}
